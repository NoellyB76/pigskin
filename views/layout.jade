!!!
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.min.css')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.btn.btn-navbar(data-toggle='collapse',data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/') Pigskin Picks
          .nav-collapse.collapse(style='height: 0px;')
            ul.nav
              li: a(href='/') Home
              li: a(href='/picks/') Make Some Picks
              li: a(href='/results/') Results
              if (user && user.is_admin)
                li: a(href='/week/') Create New Week
            - if (user)
              ul.nav.pull-right
                li.pull-right: a(href='/logout/') Logout
              p.navbar-text.pull-right Logged in as #{user.full_name}
            - else
              ul.nav.pull-right
                li: a(href='/login/') Login
                li: a(href='/user/') Create User
    .container-fluid
      .row-fluid
        .span4
          img(src='/images/iowa.jpg', alt='Iowa Hawkeyes')
          .well
            h3 Latest Results
            table.table.table-condensed
              thead
                tr
                  th Name
                  th Correct
                  th Tiebreaker
              tbody
                each result, r in results
                  tr
                    td= result.full_name
                    td= result.entries[0].score_result
                    td= result.entries[0].score_tiebreaker
        .span8
          != body
  script(src='/javascripts/jquery.js')
  script(src='/javascripts/bootstrap.min.js')
