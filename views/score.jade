h1 Score Week #{week.number}
form(method='post',action='/score')
  table.table
    thead
      tr
        th Favorite
        th Favorite Score
        th Opponent Score
        th Opponent
    tbody
      each game,i in week.games
        tr
          td= teamName(game.teamFavorite,game.isFavoriteHome)
          td: input.span1(type='number',name='scores[favorite]['+i+']',value=game.scoreFav)
          td: input.span1(type='number',name='scores[opponent]['+i+']',value=game.scoreOpp)
          td= teamName(game.teamOpponent,!game.isFavoriteHome)
  h2 Tie Breaker
  table.table
    thead
      tr
        th Favorite
        th Favorite Score
        th Opponent Score
        th Opponent
    tbody
      tr
        td.team= week.tiebreakerFavorite
        td.score: input.span1(type='number',name='scores[tiebreakerFavorite]',value=week.scoreTbFav)
        td.score: input.span1(type='number',name='scores[tiebreakerOpponent]',value=week.scoreTbOpp)
        td.team= week.tiebreakerOpponent
  input.btn(type='submit',value='Submit')
